<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:hint="@string/printer_ip"
               android:imeOptions="actionNext"
                android:singleLine="true"
        app:met_baseColor="@color/edit_text_base_color"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"
        app:met_primaryColor="@color/edit_text_primary_color"
        app:met_textColorHint="@color/edit_text_hint_color"
        app:met_validateOnFocusLost="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:hint="@string/printer_port"
        android:imeOptions="actionNext"
                android:singleLine="true"
        android:inputType="number"
        app:met_baseColor="@color/edit_text_base_color"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="14sp"
        app:met_primaryColor="@color/edit_text_primary_color"
        app:met_textColorHint="@color/edit_text_hint_color"
        app:met_validateOnFocusLost="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/charsetname"
            android:textColor="#777"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/charset"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>