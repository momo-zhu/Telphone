<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_item_margin_right"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:layout_marginEnd="@dimen/list_item_margin_left"
    android:layout_marginBottom="@dimen/list_item_margin_bottom"
    android:clickable="false"
    android:descendantFocusability="afterDescendants"
    android:drawSelectorOnTop="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/table_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="扬州炒饭"
            android:maxEms="6"
            android:textColor="@color/gray"
            android:textSize="14sp" />
        <cn.zicoo.ir2teledemo.common.MyTextView
            android:id="@+id/contain"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="扬州炒饭"
            android:layout_below="@id/table_number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            />

        <!--<TextView-->
        <!--android:id="@+id/price"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_below="@id/name"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:gravity="center"-->
        <!--android:text="20.00元/份"-->
        <!--android:textColor="@color/yellow"-->
        <!--android:textSize="14sp" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>